<?xml version="1.0" encoding="UTF-8" ?>
<constraint-mapping
    xmlns="http://symfony.com/schema/dic/constraint-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping
                        http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

    <class name="Ekyna\Bundle\UserBundle\Entity\User">
        <property name="plainPassword">
            <constraint name="NotBlank">
                <option name="message">ekyna_user.password.blank</option>
                <option name="groups">
                    <value>Registration</value>
                    <value>Resetting</value>
                    <value>ChangePassword</value>
                </option>
            </constraint>
            <constraint name="Length">
                <option name="min">6</option>
                <option name="minMessage">ekyna_user.password.short</option>
                <option name="groups">
                    <value>Registration</value>
                    <value>Resetting</value>
                    <value>ChangePassword</value>
                </option>
            </constraint>
        </property>
        <constraint name="Symfony\Bridge\Doctrine\Validator\Constraints\UniqueEntity">
            <option name="fields">email</option>
            <option name="groups">
                <value>Default</value>
                <value>Registration</value>
                <value>Resetting</value>
                <value>ChangePassword</value>
                <value>Profile</value>
            </option>
        </constraint>
    </class>

    <class name="Ekyna\Bundle\UserBundle\Entity\Token">
        <!-- TODO Login and resetting tokens must have a user -->
        <!-- TODO Registration token must not have a user -->
    </class>

</constraint-mapping>
