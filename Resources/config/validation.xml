<?xml version="1.0" encoding="UTF-8" ?>
<constraint-mapping
    xmlns="http://symfony.com/schema/dic/constraint-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping
                        http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

    <class name="Ekyna\Bundle\UserBundle\Entity\Address">
        <constraint name="Ekyna\Bundle\UserBundle\Validator\Constraints\Address" />
        <property name="user">
            <constraint name="Valid" />
        </property>

	    <property name="gender">
	        <constraint name="Ekyna\Bundle\UserBundle\Validator\Constraints\Gender" />
	    </property>
        <property name="firstName">
            <constraint name="Length">
                <option name="min">2</option>
                <option name="max">32</option>
            </constraint>
        </property>
        <property name="lastName">
            <constraint name="Length">
                <option name="min">2</option>
                <option name="max">32</option>
            </constraint>
        </property>

        <property name="street">
            <constraint name="NotBlank" />
            <constraint name="Length">
                <option name="min">3</option>
                <option name="max">255</option>
            </constraint>
        </property>
        <property name="postalCode">
            <constraint name="NotBlank" />
            <constraint name="Regex">
                <option name="pattern">/^[0-9a-zA-Z]+$/</option><!-- TODO fix for other countries (Ex: Monreal H3W2L3) -->
            </constraint>
        </property>
        <property name="city">
            <constraint name="NotBlank" />
            <constraint name="Length">
                <option name="min">3</option>
                <option name="max">64</option>
            </constraint>
        </property>

        <property name="phone">
            <constraint name="Misd\PhoneNumberBundle\Validator\Constraints\PhoneNumber" />
        </property>
        <property name="mobile">
            <constraint name="Misd\PhoneNumberBundle\Validator\Constraints\PhoneNumber" />
        </property>
    </class>

    <class name="Ekyna\Bundle\UserBundle\Entity\User">
	    <property name="gender">
            <constraint name="NotNull" />
            <constraint name="Ekyna\Bundle\UserBundle\Validator\Constraints\Gender" />
	    </property>
        <property name="firstName">
            <constraint name="NotBlank">
                <option name="groups">
                    <value>Registration</value>
                    <value>Profile</value>
                </option>
            </constraint>
            <constraint name="Length">
                <option name="min">2</option>
                <option name="max">32</option>
                <option name="groups">
                    <value>Registration</value>
                    <value>Profile</value>
                </option>
            </constraint>
        </property>
        <property name="lastName">
            <constraint name="NotBlank">
                <option name="groups">
                    <value>Registration</value>
                    <value>Profile</value>
                </option>
            </constraint>
            <constraint name="Length">
                <option name="min">2</option>
                <option name="max">32</option>
                <option name="groups">
                    <value>Registration</value>
                    <value>Profile</value>
                </option>
            </constraint>
        </property>

        <property name="phone">
            <constraint name="Misd\PhoneNumberBundle\Validator\Constraints\PhoneNumber" />
        </property>
        <property name="mobile">
            <constraint name="Misd\PhoneNumberBundle\Validator\Constraints\PhoneNumber" />
        </property>

        <property name="addresses">
            <constraint name="Valid" />
        </property>
    </class>

</constraint-mapping>
