<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping 
    xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity
        name="Ekyna\Bundle\UserBundle\Entity\Address"
        table="user_address">

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO" />
        </id>

        <field name="company" column="company" type="string" length="64" nullable="true" />
        <field name="gender" column="gender" type="string" length="8" />
        <field name="firstname" column="firstname" type="string" length="32" />
        <field name="lastname" column="lastname" type="string" length="32" />
        <field name="street" column="street" type="string" length="255" />
        <field name="supplement" column="supplement" type="string" length="255" nullable="true" />
        <field name="postalCode" column="postal_code" type="text" length="8" />
        <field name="city" column="city" type="text" length="255" />
        <field name="phone" column="phone" type="text" length="16" nullable="true" />
        <field name="mobile" column="mobile" type="text" length="16" nullable="true" />
        <field name="locked" column="locked" type="boolean" />

        <many-to-one field="user" target-entity="Ekyna\Bundle\UserBundle\Entity\User" inversed-by="addresses">
	        <join-column name="user_id" referenced-column-name="id" />
	    </many-to-one>

        <field name="createdAt" type="datetime" column="created_at">
            <gedmo:timestampable on="create"/>
        </field>
        <field name="updatedAt" type="datetime" column="updated_at">
            <gedmo:timestampable on="update"/>
        </field>

    </entity>

</doctrine-mapping>
