{% trans_default_domain 'FOSUserBundle' %}

{{ bootstrap_set_style('horizontal') }}
{{ form_row(form.email, {'label_col': 3, 'widget_col': 9, 'label': 'Addresse e-mail'}) }}
<div class="row">
    <div class="col-md-6">
        {{ form_row(form.username, {'label_col': 6, 'widget_col': 6, 'label': 'Nom d\'utilisateur'}) }}
    </div>
    <div class="col-md-6">
        {{ form_row(form.current_password, {'label_col': 6, 'widget_col': 6, 'label': 'Mot de passe actuel'}) }}
    </div>
</div>
<hr>
{{ form_row(form.company, {'label_col': 3, 'widget_col': 9}) }}
{{ form_row(form.gender, {'label_col': 3, 'widget_col': 9}) }}
<div class="row">
    <div class="col-md-6">
        {{ form_row(form.lastname, {'label_col': 6, 'widget_col': 6}) }}
    </div>
    <div class="col-md-6">
        {{ form_row(form.firstname, {'label_col': 6, 'widget_col': 6}) }}
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        {{ form_row(form.phone, {'label_col': 6, 'widget_col': 6}) }}
    </div>
    <div class="col-md-6">
        {{ form_row(form.mobile, {'label_col': 6, 'widget_col': 6}) }}
    </div>
</div>
{{ form_rest(form) }}