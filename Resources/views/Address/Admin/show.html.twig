{% extends "EkynaAdminBundle:Entity:sided.html.twig" %}

{% block title %}
<h1>{{ 'ekyna_user.address.header.show'|trans|raw }}</h1>
{% endblock %}

{% block actions %}
{{ ui_link(path('ekyna_user_user_admin_show', identifiers), 'ekyna_core.button.back', 'default', 'sm', 'list') }}
{{ ui_link(path('ekyna_user_address_admin_new', identifiers), 'ekyna_user.address.button.new', 'primary', 'sm', 'plus') }}
{% endblock %}

{% block main %}
<div class="actions">
    {{ ui_link(path('ekyna_user_address_admin_edit', identifiers|merge({'addressId': address.id})), 'ekyna_core.button.edit', 'warning', 'sm', 'pencil') }}
    {{ ui_link(path('ekyna_user_address_admin_remove', identifiers|merge({'addressId': address.id})), 'ekyna_core.button.remove', 'danger', 'sm', 'trash') }}
</div>
<div class="show show-with-tabs">
    <ul class="nav nav-tabs">
	    <li class="active"><a href="#general" data-toggle="tab">{{ 'ekyna_core.field.general'|trans }}</a></li>
	</ul>
	<div class="show-body">
	    <div class="tab-content">
		    <div class="tab-pane active" id="general">
				<dl class="dl-horizontal">
					<dt>Rue</dt><dd>{{ address.street }}</dd>
				</dl>
		    </div>
	    </div>
	</div>
</div>
{% endblock %}

{% block side %}
{% endblock %}