{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST" class="form-horizontal">
    <div class="form-body">
	    {{ bootstrap_set_style('horizontal') }}
        {{ bootstrap_set_col_size('md') }}
        {{ form_errors(form) }}
	    {{ form_row(form.plainPassword.first, { 'label_col': 5, 'widget_col': 7 }) }}
	    {{ form_row(form.plainPassword.second, { 'label_col': 5, 'widget_col': 7 }) }}
	    {{ form_rest(form) }}
    </div>
    <div class="form-footer">
        <div class="form-group row">
            <div class="col-sm-offset-4 col-sm-8">
                <button type="submit" name="submit" class="btn btn-primary"><span class="glyphicon glyphicon-ok"></span> {{ 'resetting.request.submit'|trans({}, 'FOSUserBundle') }}</button>
            </div>
	    </div>
	</div>
</form>