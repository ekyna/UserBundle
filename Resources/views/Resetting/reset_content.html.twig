{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST" class="form-horizontal">
    {{ bootstrap_set_style('horizontal') }}
    {{ form_row(form.plainPassword.first, { 'label_col': 5, 'widget_col': 7 }) }}
    {{ form_row(form.plainPassword.second, { 'label_col': 5, 'widget_col': 7 }) }}
    {{ form_rest(form) }}
    <div class="form-group">
        <div class="col-sm-offset-4 col-sm-8">
            <button type="submit" class="btn btn-primary">{{ 'resetting.reset.submit'|trans }}</button>
        </div>
    </div>
</form>