{% extends "EkynaAdminBundle:Entity/Default:show.html.twig" %}

{% block main %}
<div class="actions">
    {% if is_granted('ROLE_ALLOWED_TO_SWITCH') %}
        {{ ui_button('ekyna_user.user.button.impersonate', {
            'type': 'link',
            'path': '/?_switch_user=' ~ user.email,
            'theme': 'primary',
            'icon': 'eye-open'
        }, {
            'target': '_blank'
        }) }}
    {% endif %}
    {{ admin_resource_btn(user, 'edit') }}
    {{ admin_resource_btn(user, 'remove') }}
</div>
<div class="show show-with-tabs">
    <ul class="nav nav-tabs">
        <li class="active">
            <a href="#user-user-general" data-toggle="tab">{{ 'ekyna_core.field.general'|trans }}</a>
        </li>
        <li>
            <a href="#user-user-informations" data-toggle="tab">{{ 'ekyna_core.field.informations'|trans }}</a>
        </li>
    </ul>
    <div class="show-body">
        <div class="tab-content">
            <div class="tab-pane active" id="user-user-general">
                {{ show_row(user.email, 'text', {
                    'label': 'ekyna_core.field.email'
                }) }}
                <div class="row">
                    <div class="col-md-6">
                        {{ show_row(user.username, 'text', {
                            'label': 'ekyna_core.field.username',
                            'label_col': 4
                        }) }}
                    </div>
                    <div class="col-md-6">
                        {{ show_row(user.group, 'entity', {
                            'label': 'ekyna_core.field.group',
                            'label_col': 4,
                            'route': 'ekyna_user_group_admin_show',
                            'route_parameters_map': {'groupId': 'id'},
                            'field': 'name'
                        }) }}
                    </div>
                </div>
            </div>
            <div class="tab-pane" id="user-user-informations">
                {% if admin_resource_access(user, 'EDIT') %}
                <div class="actions">
                    {{ ui_button(
                        'ekyna_user.user.button.generate_password', {
                            'path': path('ekyna_user_user_admin_generate_password', {'userId': user.id}),
                            'type': 'link', 'size': 'sm', 'theme': 'warning'
                    }) }}
                    {{ ui_button(
                        'ekyna_user.user.button.clear_password_request', {
                            'path': path('ekyna_user_user_admin_clear_password_request', {'userId': user.id}),
                            'type': 'link', 'size': 'sm', 'theme': 'warning'
                    }) }}
                </div>
                {% endif %}
                {#<div class="row">
                    <div class="col-md-6">
                        {{ show_row(user.expired, 'boolean', {
                            'label': 'ekyna_core.field.expired',
                            'label_col': 4
                        }) }}
                    </div>
                    <div class="col-md-6">
                        {{ show_row(user.expiresAt, 'datetime', {
                            'label': 'ekyna_core.field.expires_at',
                            'label_col': 4
                        }) }}
                    </div>
                </div>#}
                <div class="row">
                    <div class="col-md-6">
                        {{ show_row(user.passwordRequestedAt, 'datetime', {
                            'label': 'ekyna_user.user.field.password_request_at',
                            'label_col': 4
                        }) }}
                    </div>
                    <div class="col-md-6">
                        {{ show_row(user.confirmationToken|truncate(64), 'text', {
                            'label': 'ekyna_user.user.field.confirmation_token',
                            'label_col': 4
                        }) }}
                    </div>
                </div>
                {#<div class="row">
                    <div class="col-md-6">
                        {{ show_row(user.credentialsExpired, 'boolean', {
                            'label': 'ekyna_user.user.field.credentials_expired',
                            'label_col': 4
                        }) }}
                    </div>
                    <div class="col-md-6">
                        {{ show_row(user.credentialsExpireAt, 'datetime', {
                            'label': 'ekyna_user.user.field.credentials_expires_at',
                            'label_col': 4
                        }) }}
                    </div>
                </div>#}
            </div>
        </div>
    </div>
</div>
{% endblock %}
