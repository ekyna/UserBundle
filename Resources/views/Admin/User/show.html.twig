{% extends "EkynaAdminBundle:Entity:sided.html.twig" %}

{% block title %}
<h1>{{ 'ekyna_user.user.header.show'|trans({'%name%': user.email})|raw }}</h1>
{% endblock %}

{% block actions %}
{{ admin_resource_btn(user, 'list') }}
{{ admin_resource_btn(user, 'new') }}
{% endblock %}

{% block main %}
<div class="actions">
    {{ admin_resource_btn(user, 'edit') }}
    {{ admin_resource_btn(user, 'remove') }}
</div>
<div class="show show-with-tabs">
    <ul class="nav nav-tabs">
	    <li class="active"><a href="#general" data-toggle="tab">{{ 'ekyna_core.field.general'|trans }}</a></li>
	    {% if ekyna_user_config.account.address -%}
	    <li><a href="#address" data-toggle="tab">{{ 'ekyna_user.address.label.plural'|trans }}</a></li>
	    {%- endif %}
	</ul>
	<div class="show-body">
	    <div class="tab-content">
		    <div class="tab-pane active" id="general">
				{{ show_row(user.email, 'text', 'ekyna_core.field.email') }}
		        {% if ekyna_user_config.account.username %}
				<div class="row">
	                <div class="col-md-6">
	                    {{ show_row(user.username, 'text', 'ekyna_core.field.username', {'label_nb_col': 4}) }}
	                </div>
	                <div class="col-md-6">
	                    {{ show_row(user.group, 'entity', 'ekyna_core.field.group', {'label_nb_col': 4, 'route': 'ekyna_user_group_admin_show', 'route_params_map': {'groupId': 'id'}, 'field': 'name'}) }}
	                </div>
	            </div>
				{% else %}
				{{ show_row(user.group, 'entity', 'ekyna_core.field.group', {'route': 'ekyna_user_group_admin_show', 'route_params_map': {'groupId': 'id'}, 'field': 'name'}) }}
				{% endif %}
				<hr>
				{{ show_row(user.company, 'text', 'ekyna_core.field.company') }}
				<div class="row show-row">
					<div class="col-md-2 show-label">{{ 'ekyna_core.field.identity'|trans }}</div>
					<div class="col-md-10">
						<div class="show-widget show-widget-simple">{{ render_identity(user) }}</div>
					</div>
				</div>
		        <div class="row">
	                <div class="col-md-6">
	                    {{ show_row(user.phone, 'tel', 'ekyna_core.field.phone', {'label_nb_col': 4}) }}
	                </div>
	                <div class="col-md-6">
                        {{ show_row(user.mobile, 'tel', 'ekyna_core.field.mobile', {'label_nb_col': 4}) }}
	                </div>
	            </div>
		    </div>
		    {% if ekyna_user_config.account.address -%}
		    <div class="tab-pane" id="address">
	        {% set opened = false %}
			{% for address in user.addresses %}
			{%- if loop.index0 % 2 == 0 %}
			    {% set opened = true %}
			    <div class="row">
			{%- endif %}
			        <div class="col-md-6">
			            <div class="panel panel-default">
							<div class="panel-body">
					            {{ render_address(address) }}
							</div>
							<div class="panel-footer">
							    {{ admin_resource_btn(address, 'edit', {'theme': 'default', 'size': 'xs', 'icon': null, 'short': true}) }}
							    {{ admin_resource_btn(address, 'remove', {'theme': 'default', 'size': 'xs', 'icon': null, 'short': true}, {'class': 'pull-right'}) }}
							</div>
						</div>
			        </div>
			{%- if loop.index0 % 2 == 1 %}
			    {% set opened = false %}
			    </div>
			{%- endif %}
			{% endfor %}
			{%- if opened %}
			    </div>
			{%- endif %}
			{% if admin_resource_access('ekyna_user.address', 'new') %}
			    <p>
			        {{ ui_link(path('ekyna_user_address_admin_new', identifiers|merge({'userId': user.id})), 'ekyna_user.address.button.new') }}
			    </p>
			{% endif %}
		    </div>
			{%- endif %}
	    </div>
	</div>
</div>
{% endblock %}