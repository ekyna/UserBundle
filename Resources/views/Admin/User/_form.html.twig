<ul class="nav nav-tabs">
    <li class="active"><a href="#general" data-toggle="tab">{{ 'ekyna_core.field.general'|trans }}</a></li>
</ul>
<div class="panel-body form-body">
    {{ bootstrap_set_style('horizontal') }}
    {{ bootstrap_set_col_size('md') }}
    {{ form_errors(form) }}
    <div class="tab-content">
	    <div class="tab-pane active" id="general">
			{{ form_row(form.email) }}
			{% if form.username is defined %}
	        <div class="row">
	            <div class="col-md-6">{{ form_row(form.username, {'label_col': 4, 'widget_col': 8}) }}</div>
	            <div class="col-md-6">{{ form_row(form.group, {'label_col': 4, 'widget_col': 8}) }}</div>
	        </div>
			{% else %}
			{{ form_row(form.group) }}
			{% endif %}
	        <hr>
	        {{ form_row(form.company) }}
	        {{ form_row(form.identity) }}
	        <div class="row">
	            <div class="col-md-6">{{ form_row(form.phone, {'label_col': 4, 'widget_col': 8}) }}</div>
	            <div class="col-md-6">{{ form_row(form.mobile, {'label_col': 4, 'widget_col': 8}) }}</div>
	        </div>
	        {{ form_rest(form) }}
	    </div>
    </div>
</div>