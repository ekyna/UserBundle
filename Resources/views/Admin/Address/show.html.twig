{% extends "EkynaAdminBundle:Entity:sided.html.twig" %}

{% block title %}
<h1>{{ 'ekyna_user.address.header.show'|trans|raw }}</h1>
{% endblock %}

{% block actions %}
{{ admin_resource_btn(address.user, 'show', {'label': 'ekyna_core.button.back'}) }}
{{ admin_resource_btn(address, 'new') }}
{% endblock %}

{% block main %}
<div class="actions">
	{{ admin_resource_btn(address, 'edit') }}
	{{ admin_resource_btn(address, 'remove') }}
</div>
<div class="show show-with-tabs">
    <ul class="nav nav-tabs">
	    <li class="active"><a href="#general" data-toggle="tab">{{ 'ekyna_core.field.general'|trans }}</a></li>
	</ul>
	<div class="show-body">
	    <div class="tab-content">
		    <div class="tab-pane active" id="general">
				<dl class="dl-horizontal">
					<dt>Rue</dt><dd>{{ address.street }}</dd>
				</dl>
		    </div>
	    </div>
	</div>
</div>
{% endblock %}