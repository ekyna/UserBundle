{% extends "EkynaAdminBundle:Entity:sided.html.twig" %}

{% block title %}
<h1>{{ 'ekyna_user.address.header.show'|trans|raw }}</h1>
{% endblock %}

{% block actions %}
{{ admin_resource_btn(address.user, 'show', {'label': 'ekyna_core.button.back'}) }}
{{ admin_resource_btn(address, 'new') }}
{% endblock %}

{% block main %}
<div class="actions">
	{{ admin_resource_btn(address, 'edit') }}
	{{ admin_resource_btn(address, 'remove') }}
</div>
<div class="show show-with-tabs">
    <ul class="nav nav-tabs">
	    <li class="active"><a href="#user-address-general" data-toggle="tab">{{ 'ekyna_core.field.general'|trans }}</a></li>
	</ul>
	<div class="show-body">
	    <div class="tab-content">
		    <div class="tab-pane active" id="user-address-general">
                {{ show_row(address.company, 'text', 'ekyna_core.field.company') }}
                <div class="row show-row">
                    <div class="col-md-2 show-label">{{ 'ekyna_core.field.identity'|trans }}</div>
                    <div class="col-md-10">
                        <div class="show-widget show-widget-inline">
                            {% if address.lastName is not empty and address.firstName is not empty -%}
                                {{ render_identity(address) }}
                            {%- else -%}
                                {{ render_identity(address.user) }}
                            {%- endif %}
                        </div>
                    </div>
                </div>
                {{ show_row(address.street, 'text', 'ekyna_core.field.street') }}
                {{ show_row(address.supplement, 'text', 'ekyna_core.field.supplement') }}
                <div class="row">
                    <div class="col-md-6">
                        {{ show_row(address.postalCode, 'text', 'ekyna_core.field.postal_code', {'label_nb_col': 4}) }}
                    </div>
                    <div class="col-md-6">
                        {{ show_row(address.city, 'text', 'ekyna_core.field.city', {'label_nb_col': 4}) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        {{ show_row(address.country|country, 'text', 'ekyna_core.field.country', {'label_nb_col': 4}) }}
                    </div>
                    <div class="col-md-6">
                        {{ show_row(address.state, 'text', 'ekyna_core.field.state', {'label_nb_col': 4}) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        {{ show_row(address.phone, 'tel', 'ekyna_core.field.phone', {'label_nb_col': 4}) }}
                    </div>
                    <div class="col-md-6">
                        {{ show_row(address.mobile, 'tel', 'ekyna_core.field.mobile', {'label_nb_col': 4}) }}
                    </div>
                </div>
		    </div>
	    </div>
	</div>
</div>
{% endblock %}