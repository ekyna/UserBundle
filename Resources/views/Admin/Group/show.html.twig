{% extends "EkynaAdminBundle:Entity/Default:show.html.twig" %}

{% block main %}
<div class="actions">
    {{ admin_resource_btn(group, 'edit', {'label': 'ekyna_user.group.button.edit_permissions', 'path': path('ekyna_user_group_admin_edit_permissions', identifiers|merge({'groupId': group.id}))}) }}
    {{ admin_resource_btn(group, 'edit') }}
    {{ admin_resource_btn(group, 'remove') }}
</div>
<div class="show show-with-tabs">
    <ul class="nav nav-tabs" data-tab-key="{{ resource_id }}">
        <li class="active">
            <a href="#user-group-general" id="toggle-general" data-toggle="tab">
                {{ 'ekyna_core.field.general'|trans }}
            </a>
        </li>
    </ul>
    <div class="show-body">
        <div class="tab-content">
            <div class="tab-pane active" id="user-group-general">
                {{ show_row(group.name, 'text', 'ekyna_core.field.name') }}
                <br><br>
                <h4 class="sub-header">{{ 'ekyna_admin.acl.title'|trans }}</h4>
                <div class="acl-table ekyna-table">
                {% include "EkynaAdminBundle:Acl:permissions_table.html.twig" %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
