<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="form-horizontal">
    <div class="form-body">
	    {{ bootstrap_set_style('horizontal') }}
	    {{ form_row(form.email, {'label_col': 4, 'widget_col': 8, 'label': 'ekyna_core.field.email'|trans}) }}
	    {{ form_row(form.username, {'label_col': 4, 'widget_col': 8, 'label': 'ekyna_core.field.username'|trans}) }}
	    {{ form_row(form.plainPassword.first, {'label_col': 4, 'widget_col': 8, 'label': 'ekyna_core.field.password'|trans}) }}
	    {{ form_row(form.plainPassword.second, { 'label_col': 4, 'widget_col': 8, 'label': 'ekyna_core.field.verify'|trans}) }}
	    <hr>
	    {{ form_row(form.company, {'label_col': 4, 'widget_col': 8}) }}
	    {{ form_row(form.gender, {'label_col': 4, 'widget_col': 8}) }}
	    {{ form_row(form.firstname, {'label_col': 4, 'widget_col': 8}) }}
	    {{ form_row(form.lastname, {'label_col': 4, 'widget_col': 8}) }}
	    {{ form_row(form.phone, {'label_col': 4, 'widget_col': 8}) }}
	    {{ form_row(form.mobile, {'label_col': 4, 'widget_col': 8}) }}
	    {{ form_rest(form) }}
    </div>
    {{ ui_form_footer(null, 'ekyna_core.button.save', 'primary', 'ok', false, 4) }}
</form>