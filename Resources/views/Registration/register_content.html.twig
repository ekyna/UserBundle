{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="form-horizontal">
    <div class="form-body">
	    {{ bootstrap_set_style('horizontal') }}
	    {{ form_row(form.email, { 'label_col': 4, 'widget_col': 8 }) }}
	    {{ form_row(form.username, { 'label_col': 4, 'widget_col': 8 }) }}
	    {{ form_row(form.plainPassword.first, { 'label_col': 4, 'widget_col': 8 }) }}
	    {{ form_row(form.plainPassword.second, { 'label_col': 4, 'widget_col': 8 }) }}
	    <hr>
	    {{ form_row(form.company, {'label_col': 4, 'widget_col': 8}) }}
	    {{ form_row(form.gender, {'label_col': 4, 'widget_col': 8}) }}
	    {{ form_row(form.firstname, {'label_col': 4, 'widget_col': 8}) }}
	    {{ form_row(form.lastname, {'label_col': 4, 'widget_col': 8}) }}
	    {{ form_row(form.phone, {'label_col': 4, 'widget_col': 8}) }}
	    {{ form_row(form.mobile, {'label_col': 4, 'widget_col': 8}) }}
	    {{ form_rest(form) }}
    </div>
    <div class="form-footer">
        <div class="form-group row">
	        <div class="col-sm-offset-4 col-sm-8">
	            <button type="submit" class="btn btn-primary">{{ 'registration.submit'|trans }}</button>
	        </div>
        </div>
    </div>
</form>