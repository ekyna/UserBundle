<form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="form-horizontal">
    <div class="form-body">
		{{ bootstrap_set_style('horizontal') }}
        {{ bootstrap_set_col_size('md') }}
        {{ form_errors(form) }}
		{{ form_row(form.current_password, {'label': 'ekyna_user.account.password.current'|trans, 'label_col': 5, 'widget_col': 7}) }}
		{{ form_row(form.plainPassword.first, {'label': 'ekyna_user.account.password.new'|trans, 'label_col': 5, 'widget_col': 7}) }}
		{{ form_row(form.plainPassword.second, {'label': 'ekyna_user.account.password.confirm'|trans, 'label_col': 5, 'widget_col': 7}) }}
		{{ form_rest(form) }}
    </div>
    <div class="form-footer">
        <div class="form-group row">
            <div class="col-sm-offset-5 col-sm-7">
                <button type="submit" name="submit" class="btn btn-primary">
                    <span class="glyphicon glyphicon-ok"></span>
                    {{ 'ekyna_user.account.password.submit'|trans }}
                </button>
            </div>
	    </div>
	</div>
</form>
