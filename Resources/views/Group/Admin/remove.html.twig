{% extends "EkynaAdminBundle:Entity:sided.html.twig" %}

{% block title %}
<h1>{{ 'ekyna_user.group.header.remove'|trans({'%name%': group.name})|raw }}</h1>
{% endblock %}

{% block actions %}
{{ ui_link(path('ekyna_user_group_admin_list', identifiers), 'ekyna.admin.button.back_to_list', 'default', 'sm', 'list') }}
{{ ui_link(path('ekyna_user_group_admin_new', identifiers), 'ekyna_user.group.button.new', 'primary', 'sm', 'plus') }}
{% endblock %}

{% block main %}
<form action="{{ path('ekyna_user_group_admin_remove', identifiers|merge({'groupId': group.id})) }}" method="post" class="form-horizontal">
    <div class="form-body">
	    {{ bootstrap_set_style('horizontal') }}
		{{ form_widget(form) }}
    </div>
    {{ ui_form_footer(path('ekyna_user_group_admin_show', identifiers|merge({'groupId': group.id})), 'ekyna.admin.button.remove', 'danger') }}
</form>
{% endblock %}

{% block side %}
{% endblock %}