{% extends "EkynaAdminBundle:Entity:sided.html.twig" %}

{% block title %}
<h1>{{ 'ekyna.group.header.edit_permissions'|trans({'%name%': group.name})|raw }}</h1>
{% endblock %}

{% block actions %}
{{ ui_link(path('ekyna_group_admin_list'), 'ekyna.admin.button.back_to_list', 'default', 'sm', 'list') }}
{{ ui_link(path('ekyna_group_admin_new'), 'ekyna.group.button.new', 'primary', 'sm', 'plus') }}
{% endblock %}

{% block main %}
<form action="{{ path('ekyna_group_admin_edit_permissions', {'groupId': group.id}) }}" method="post" class="form-horizontal">
    <div class="form-body">
	    {{ bootstrap_set_style('horizontal') }}
        {{ form_widget(form) }}
	</div>
    {{ ui_form_footer(path('ekyna_group_admin_show', {'groupId': group.id})) }}
</form>
{% endblock %}

{% block side %}
{% endblock %}