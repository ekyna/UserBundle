{% extends "EkynaAdminBundle:Entity:sided.html.twig" %}

{% block title %}
<h1>{{ 'ekyna.group.header.show'|trans({'%name%': group.name})|raw }}</h1>
{% endblock %}

{% block actions %}
{{ ui_link(path('ekyna_group_admin_list'), 'ekyna.admin.button.back_to_list', 'default', 'sm', 'list') }}
{{ ui_link(path('ekyna_group_admin_new'), 'ekyna.group.button.new', 'primary', 'sm', 'plus') }}
{% endblock %}

{% block main %}
<div class="actions">
    {{ ui_link(path('ekyna_group_admin_edit_permissions', {'groupId': group.id}), 'ekyna.group.button.edit_permissions', 'warning', 'sm', 'pencil') }}
    {{ ui_link(path('ekyna_group_admin_edit', {'groupId': group.id}), 'ekyna.admin.button.edit', 'warning', 'sm', 'pencil') }}
    {{ ui_link(path('ekyna_group_admin_remove', {'groupId': group.id}), 'ekyna.admin.button.remove', 'danger', 'sm', 'trash') }}
</div>
<div class="show show-with-tabs">
    <ul class="nav nav-tabs">
	    <li class="active"><a href="#general" data-toggle="tab">Général</a></li>
	</ul>
	<div class="show-body">
	    <div class="tab-content">
		    <div class="tab-pane active" id="general">
				<dl class="dl-horizontal">
					<dt>Name</dt><dd>{{ group.name }}</dd>
				</dl>
				<br><br>
				<h4 class="sub-header">Permissions</h4>
				<div class="acl-table ekyna-table">
				{% include "EkynaAdminBundle:Acl:permissions_table.html.twig" %}
				</div>
		    </div>
	    </div>
	</div>
</div>
{% endblock %}

{% block side %}
{% endblock %}