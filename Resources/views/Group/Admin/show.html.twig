{% extends "EkynaAdminBundle:Entity:sided.html.twig" %}

{% block title %}
<h1>{{ 'ekyna_user.group.header.show'|trans({'%name%': group.name})|raw }}</h1>
{% endblock %}

{% block actions %}
{{ ui_link(path('ekyna_user_group_admin_list', identifiers), 'ekyna_admin.button.back_to_list', 'default', 'sm', 'list') }}
{{ ui_link(path('ekyna_user_group_admin_new', identifiers), 'ekyna_user.group.button.new', 'primary', 'sm', 'plus') }}
{% endblock %}

{% block main %}
<div class="actions">
    {{ ui_link(path('ekyna_user_group_admin_edit_permissions', identifiers|merge({'groupId': group.id})), 'ekyna_user.group.button.edit_permissions', 'warning', 'sm', 'pencil') }}
    {{ ui_link(path('ekyna_user_group_admin_edit', identifiers|merge({'groupId': group.id})), 'ekyna_admin.button.edit', 'warning', 'sm', 'pencil') }}
    {{ ui_link(path('ekyna_user_group_admin_remove', identifiers|merge({'groupId': group.id})), 'ekyna_admin.button.remove', 'danger', 'sm', 'trash') }}
</div>
<div class="show show-with-tabs">
    <ul class="nav nav-tabs">
	    <li class="active"><a href="#general" data-toggle="tab">{{ 'ekyna_core.field.general'|trans }}</a></li>
	</ul>
	<div class="show-body">
	    <div class="tab-content">
		    <div class="tab-pane active" id="general">
		        {{ show_row(group.name, 'text', 'ekyna_core.field.name') }}
				<br><br>
				<h4 class="sub-header">{{ 'ekyna_admin.acl.title'|trans }}</h4>
				<div class="acl-table ekyna-table">
				{% include "EkynaAdminBundle:Acl:permissions_table.html.twig" %}
				</div>
		    </div>
	    </div>
	</div>
</div>
{% endblock %}

{% block side %}
{% endblock %}