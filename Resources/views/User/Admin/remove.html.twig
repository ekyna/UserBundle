{% extends "EkynaAdminBundle:Entity:sided.html.twig" %}

{% block title %}
<h1>{{ 'ekyna_user.user.header.remove'|trans({'%name%': user.email})|raw }}</h1>
{% endblock %}

{% block actions %}
{{ admin_resource_btn(user, 'list') }}
{{ admin_resource_btn(user, 'new') }}
{% endblock %}

{% block main %}
<form action="{{ path('ekyna_user_user_admin_remove', identifiers|merge({'userId': user.id})) }}" method="post" class="form-horizontal">
    <div class="form-body">
	    {{ bootstrap_set_style('horizontal') }}
		{{ form_widget(form) }}
    </div>
    {{ ui_form_footer(form) }}
</form>
{% endblock %}

{% block side %}
{% endblock %}